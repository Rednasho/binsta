{% extends '/layout/app.twig' %}

{% block title %}
    Binsta | Users
{% endblock %}

{% block content %}
    <div class="flex w-full justify-center items-center mb-20">
        <div class="flex flex-col items-center justify-center w-full">
            {% for profileItem in profile %}
                <div class="flex justify-between w-3/4 mt-10">
                    <div class="flex">
                        <div class="relative inline-block">
                            <img id="profile-picture" class="h-36 w-36 object-cover rounded-full" src="/public/assets/imgs/{{ profileImg }}" alt="Profile Picture">
                        </div>
                        <div class="ms-10 flex">
                            <h1 class="text-3xl">{{ profileItem.username }}</h1>
                        </div>
                    </div>
                </div>
                <hr class="w-3/4 my-5 border-black">
                <div class="w-3/4 flex flex-wrap">
                    <div class="flex flex-wrap w-full mb-20">
                        {% for post in posts %}
                            <div class="flex flex-col bg-white w-80 rounded-xl shadow-xl me-5 mb-5 mt-10" id="profile_card">
                                <img id="profile-post-image" src="/public/assets/imgs/post/{{ post.image }}" alt="post" class="object-cover w-full">
                                <div class="flex items-center pt-2 ps-5">
                                    <p><span class="font-bold">{{ post.likes }}</span> likes</p>
                                </div>
                                <div class="flex ps-5 pb-5">
                                    <a href="" class="font-bold">{{ profileItem.username }}</a>
                                    <p class="ps-3 w-1/2">{{ post.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}