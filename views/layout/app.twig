<!doctype html>
<html lang="en">
<head>
    <link rel="apple-touch-icon" sizes="180x180" href="/public/assets/imgs/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/public/assets/imgs/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/assets/imgs/favicon/favicon-16x16.png">
    <link rel="manifest" href="/public/assets/imgs/favicon/site.webmanifest">
    <link rel="mask-icon" href="/public/assets/imgs/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <title>{% block title %}Binsta{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/assets/css/style.css">
    <link rel="stylesheet" href="/public/assets/css/prism.css">
</head>
<body class="bg-gray-200">
    {% block body %}
    <header class="flex justify-center text-white bg-blue-600 py-7">
        <div class="flex justify-between items-center w-3/4">
            <div class="title">
                <a href="/" class="text-6xl max-md:text-4xl">Binsta</a>
            </div>
            <div>
                <form action="/search/result" method="post">
                    <div class="flex relative items-center">
                        <input type="text" name="finduser" id="finduser" placeholder="Search user..." class="ps-3 py-3 px-40 max-md:px-0 max-md:hidden max-md:ps-3 text-black rounded">
                        <button type="submit" class="flex items-center justify-center text-lg max-md:hidden text-white bg-blue-400 rounded-br rounded-tr absolute right-0 w-1/6 h-full">
                            <i class="fa-solid fa-magnifying-glass pt-1"></i>
                        </button>
                    </div>
                </form>
            </div>
            <ul class="flex items-center">
                <li class="me-5">
                    <a href="/">
                        <i class="fa-solid fa-house text-2xl"></i>
                    </a>
                </li>
                <li class="me-5">
                    <a href="/post/create">
                        <i class="fa-solid fa-plus border-2 rounded-lg p-1.5"></i>
                    </a>
                </li>
                <li class="me-5">
                    {{ session }}
                    <a href="/user/{% if session is empty %}profile{% else %}login{% endif %}">
                        <img src="/public/assets/imgs{{ profileImg }}" alt="pfp" class="rounded-full object-cover bg-blue-300 w-10 h-10">
                    </a>
                </li>
            </ul>
        </div>
    </header>
        <section class="min-h-screen">
            {% block content %}{% endblock %}
        </section>
    <footer class="flex bg-blue-600 justify-center text-white">
        <p class="py-5 font-bold">Joran Valk 2023 &copy Bit-Academy</p>
    </footer>
    {% endblock %}
    <script src="/public/assets/js/script.js"></script>
    <script src="/public/assets/js/prism.js"></script>
</body>
</html>